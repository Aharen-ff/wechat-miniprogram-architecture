/* 标签组 */
.tab-container {
  display: flex;
  flex-direction: row;
  width: 100%;
}

/* 页级 tab */
.tab-container.page-level {
  background-color: white;
  box-shadow: 0px 5px 10px 0px var(--normal-button-shadow-color);
}

.page-level .tab {
  flex: 1;
  font-weight: bold;
  text-align: center;
  color: #333;
  padding: 9px 0;
  line-height: 30px;
  cursor: pointer;
  background-color: white;
  background-position: 0 105%;
  transition: all 0.2s ease;
}

.page-level .tab:active {
  background-color: var(--normal-button-active-color);
}

.page-level .tab.active {
  color: #12B3AD;
  background-image: linear-gradient(#12B3AD, #12B3AD);
  background-repeat: no-repeat;
  background-size: 100% 3px;
  background-position: 0 100%;
}
