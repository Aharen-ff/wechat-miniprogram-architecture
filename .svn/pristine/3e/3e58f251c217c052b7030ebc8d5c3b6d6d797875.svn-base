@import "./styles/btn.wxss";
@import "./styles/card.wxss";
@import "./styles/entry.wxss";
@import "./styles/grid.wxss";
@import "./styles/list.wxss";
@import "./styles/tab.wxss";
@import "./styles/text.wxss";

Page {
  --primary-color: rgb(18, 179, 173);
  --success-color: rgb(124, 200, 84);
  --warning-color: rgb(240, 142, 53);
  --failure-color: rgb(236, 90, 83);
  --disable-color: rgb(204, 204, 204);

  --primary-text-color: rgb(51, 51, 51);
  --hint-text-color: rgb(128, 128, 128);

  --primary-button-shadow-color: rgba(18, 179, 173, 0.3);
  --success-button-shadow-color: rgba(124, 200, 84, 0.3);
  --warning-button-shadow-color: rgba(240, 142, 53, 0.3);
  --failure-button-shadow-color: rgba(236, 90, 83, 0.3);
  --normal-button-shadow-color: rgba(204, 204, 204, 0.3);

  --primary-button-active-color: rgb(12, 125, 121);
  --success-button-active-color: rgb(83, 150, 48);
  --warning-button-active-color: rgb(190, 98, 14);
  --failure-button-active-color: rgb(201, 30, 22);
  --normal-button-active-color: rgb(222, 222, 222, 0.3);

  background-color: #f5f5f5;
  font-size: 16px;
  color: var(--primary-text-color);
}

.mobile-app-container.with-safe-bottom {
  padding-bottom: 24px;
}

.mobile-app-container.with-bottom-fixed {
  padding-bottom: 68px;
}

.mobile-app-container.with-bottom-fixed.with-safe-bottom {
  padding-bottom: 92px;
}
