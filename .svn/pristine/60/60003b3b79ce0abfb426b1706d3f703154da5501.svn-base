/* 卡片基底 */
.card {
  box-sizing: border-box;
  margin: 0 10px;
  background-color: white;
  box-shadow: 0px 5px 10px 0px var(--normal-button-shadow-color);
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.5s ease;
}

.card + .card {
  margin-top: 10px;
}

.card.clickable:active {
  background-color: var(--normal-button-active-color);
}
